  <Target Name="AfterBuild">
    <Message Text="--------=||  After Build  ||=--------" Importance="high" />
    <!-- Create our PDBs-->
    <CallTarget Targets="GenerateMonoSymbols" Condition=" Exists('$(TargetDir)$(TargetName).pdb') " />
    <!--Copy to our Unity Project -->
    <Message Text="Copying Dll -  From: $(TargetDir)$(TargetName).dll" Importance="high" />
    <Message Text="               To: $(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).dll" Importance="High" />
    <Copy SourceFiles="$(TargetDir)$(TargetName).dll" DestinationFiles="$(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).dll" />
    <Message Text="Copying pdb: - From: $(TargetDir)$(TargetName).pdb" Importance="high" />
    <Message Text="               To: $(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).pdb" Importance="High" />
    <Copy Condition="Exists('$(TargetDir)$(TargetName).pdb')" SourceFiles="$(TargetDir)$(TargetName).pdb" DestinationFiles="$(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).pdb" />
    <Message Text="Copying mdb: - From: $(TargetDir)$(TargetName).dll.mdb" Importance="high" />
    <Message Text="               To: $(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).dll.mdb" Importance="High" />
    <Copy Condition="Exists('$(TargetDir)$(TargetName).dll.mdb')" SourceFiles="$(TargetDir)$(TargetName).dll.mdb" DestinationFiles="$(SolutionDir)..\proj.unity\Assets\Jiffy\Editor\$(TargetName).dll.mdb" />
    <Message Text="--------=|| Complete ||=--------" Importance="high" />
  </Target>
  <Target Name="GenerateMonoSymbols">
    <Message Text="Generating Mono Symbols..." Importance="High" />
    <Exec Command="&quot;$(MonoMdbGenerator)&quot; $(AssemblyName).dll" WorkingDirectory="$(MSBuildProjectDirectory)\$(OutputPath)" />
  </Target>
